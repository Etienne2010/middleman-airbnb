<% flat = data.cardsdata.find { |user| user.name = owner } %>

<!-- Inject flat data in template -->
<div class="banner" style="background-image: url(<%="'../#{flat.city_image}'"%>">
  <p><%= flat.city_name %></p>
</div>

<div class="datanform">
  <div class="roomdata">
    <div class="avatar">
      <img src=<%="'../#{flat.avatar_image}'"%> alt="Avatar" class="avatar">
      <%= flat.name %>
    </div>
    <div class="description">
      <h1><%= flat.name_label %></h1>
      <p><%= flat.caption %></p>
    </div>
  </div>
  <div class="formdata">
    <form action="">
      <h5>Book this flat</h5>
      <div class="row">
        <div class="col-xs-6">
          <div class="form-side">
            <input type="date" placeholder="" class="control-form">
          </div>
        </div>
        <div class="col-xs-6">
          <div class="form-side">
            <input type="date" placeholder="" class="control-form">
          </div>
        </div>
        <div class="col-xs-12">
          <div class="form-side">
            <input type="number" placeholder="1" class="control-form">
          </div>
        </div>
        <div class="col-xs-12">
          <div class="form-side">
            <input type="submit" class="btn btn-danger" value="Book it">
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
