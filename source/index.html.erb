<%= partial "layouts/banner" %>

<div class="cards">

<% data.cardsdata.each do |card| %>
  <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= card.city_image %>')">
    <div class="card-category"><%= card.city_name %></div>
    <div class="card-description">
      <h2><%= card.name_label %></h2>
      <p><%= card.caption %></p>
    </div>
    <%= image_tag "#{card.avatar_image}", class: "card-user" %>
    <%= link_to "", "flats/#{card.name}.html", class: "card-link" %>
  </div>
<% end %>

</div>
